<h1>Editar Traslado</h1>

<%= form_with(model: @traslado, local: true) do |form| %>
  <% if @traslado.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@traslado.errors.count, "error") %> prohibited this @traslado from being saved:</h2>

      <ul>
      <% @traslado.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="form-group">
    <%= form.label :centro_de_costo %>
    <%= form.text_field :centro_de_costo, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :estado %>
    <%= form.text_field :estado, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :comentario %>
    <%= form.text_area :comentario, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if @traslado.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', @traslado, method: :delete, class: "text-danger", data: { confirm: 'Esta seguro?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if @traslado.persisted? %>
      <%= link_to "Cancel", @traslado, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", @traslados_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>

