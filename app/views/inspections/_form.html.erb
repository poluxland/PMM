<%= form_with(model: inspection, local: true) do |form| %>
  <% if inspection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inspection.errors.count, "error") %> prohibited this inspection from being saved:</h2>

      <ul>
      <% inspection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :plant_id %>
    <%= form.select :plant_id, Plant.all.map { |r| [r.descripcion, r.id] } %>

  </div>

  <div class="form-group">
    <%= form.label :area_id %>
    <%= form.select :area_id, Area.all.map { |r| [r.descripcion, r.id] } %>
  </div>

  <div class="form-group">
    <%= form.label :tarea_id %>
    <%= form.select :tarea_id, Tarea.all.map { |r| [r.descripcion, r.id] } %>
  </div>

  <div class="form-group">
    <%= form.label :supervisor_id %>
    <%= form.select :supervisor_id, Supervisor.all.map { |r| [r.nombre, r.id] } %>
  </div>

  <div class="form-group">
    <%= form.label :trabajadores %>
    <%= form.number_field :trabajadores, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :ast %>
    <%= form.check_box :ast, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :pts %>
    <%= form.check_box :pts, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :epp %>
    <%= form.check_box :epp, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :jetin %>
    <%= form.check_box :jetin, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :sala_de_soplado %>
    <%= form.check_box :sala_de_soplado, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :estado_general_de_herramientas %>
    <%= form.check_box :estado_general_de_herramientas, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subsitio %>
    <%= form.check_box :subsitio, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cumplimiento %>
    <%= form.number_field :cumplimiento, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :comentarios %>
    <%= form.text_area :comentarios, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :apr_id %>
    <%= form.select :apr_id, Apr.all.map { |r| [r.nombre, r.id] } %>

  </div>

  <div class="form-group">
    <% if inspection.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', inspection, method: :delete, class: "text-danger", data: { confirm: 'Esta seguro?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if inspection.persisted? %>
      <%= link_to "Cancel", inspection, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", inspections_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
