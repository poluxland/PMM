<%= form_with(model: mantenimiento, local: true) do |form| %>
  <% if mantenimiento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mantenimiento.errors.count, "error") %> prohibited this mantenimiento from being saved:</h2>

      <ul>
      <% mantenimiento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :fecha_programada %>
    <%= form.date_select :fecha_programada, class: 'form-control' %>
  </div>



  <div class="form-group">
  <%= form.label :fecha_ejecucion %>
  <%= form.date_select :fecha_ejecucion, { include_blank: true }, class: '' %>
</div>

  <div class="form-group">
  <%= form.label :area %>
  <%= form.select :area, ['Calbuco', 'MMPP', 'M1', 'M2'], { include_blank: true }, class: 'form-control' %>
</div>


  <div class="form-group">
    <%= form.label :tarea %>
    <%= form.text_field :tarea, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :clase %>
    <%= form.select :clase, ['Plan', 'Contingencia'], { }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :departamento %>
   <%= form.select :departamento, ['Mantención', 'Operación'], { include_blank: true }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :estado %>
   <%= form.select :estado, ['Programado', 'En ejecución', 'Terminado', 'Cancelado'], {  }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :observacion %>
    <%= form.text_field :observacion, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if mantenimiento.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', mantenimiento, method: :delete, class: "text-danger", data: { confirm: 'Esta seguro?' } %>
      </div>
    <% end %>


    <%= form.submit mantenimiento.new_record? ? 'Crear tarea' : 'Modificar tarea', class: 'btn btn-primary' %>


    <% if mantenimiento.persisted? %>
      <%= link_to "Cancel", mantenimiento, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", mantenimientos_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
