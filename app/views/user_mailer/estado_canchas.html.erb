   .chart {
  font-family: 'Arial', sans-serif;
  margin: 10px auto;
}

.chart div {
  background-color: #3498db; /* A pleasant blue shade */
  color: white; /* Improved contrast for readability */
  margin: 8px 0; /* More space between bars */
  padding: 10px; /* Increased padding for a better visual effect */
  font-size: 14px; /* Larger font for readability */
  border-radius: 5px; /* Rounded corners for a modern look */
