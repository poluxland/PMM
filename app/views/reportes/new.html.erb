<h1>Nuevo Reporte</h1>

<%= form_with(model: [@trabajo, @reporte], html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if @reporte.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@reporte.errors.count, "error") %> prohibited this reporte from being saved:</h4>
      <ul>
        <% @reporte.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :control, class: 'form-label' %>
    <%= form.text_field :control, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :notas, class: 'form-label' %>
    <%= form.text_area :notas, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :avance, class: 'form-label' %>
    <%= form.number_field :avance, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :inactividad, class: 'form-label' %>
    <%= form.number_field :inactividad, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Crear Reporte', class: 'btn btn-primary' %>
  </div>
<% end %>


